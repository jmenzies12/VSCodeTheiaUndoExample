{
  "compilerOptions": {
		"target": "ES2017",
		"module": "ESNext",
		"lib": ["ESNext", "dom"],
		"sourceMap": true,
		"outDir": "out",
		"strict": true,
		"noUnusedLocals": true,
		"noImplicitReturns": true,
		"noImplicitOverride": true,
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"jsx": "react-jsx"
  },
  "include": [
     "src/**/*.ts", "src/**/*.tsx"
  ],
  "exclude": [
     "out",
     "node_modules"
  ]
}
